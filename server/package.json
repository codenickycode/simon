{
  "name": "@simon/server",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "pnpm run prebuild && vite build",
    "deploy": "pnpm wrangler deploy",
    "dev": "pnpm run build && wrangler dev --live-reload --env local",
    "lint": "eslint .",
    "test": "pnpm run build && vitest run",
    "start": "wrangler dev --env local",
    "typecheck": "pnpm exec tsc --build"
  },
  "dependencies": {
    "@simon/shared": "workspace:*"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.4.16",
    "@cloudflare/workers-types": "^4.20240718.0",
    "vite": "^5.3.2",
    "vitest": "1.5.0"
  }
}
