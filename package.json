{
  "name": "simon",
  "type": "module",
  "private": true,
  "version": "0.0.0",
  "description": "Simon: The classic memory game",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "client": "pnpm --filter client",
    "shared": "pnpm --filter shared",
    "worker": "pnpm --filter worker",
    "ci": "pnpm lint && pnpm typecheck && pnpm test",
    "clean": "rm -rf node_modules pnpm-lock && pnpm -r exec rm -rf node_modules && pnpm i",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm exec eslint --fix",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch",
    "typecheck": "pnpm -r typecheck"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/eslint": "^9.6.0",
    "@types/node": "^20.14.12",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.14.1",
    "eslint": "^8.57.0",
    "prettier": "^3.3.3",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20.10.0",
    "pnpm": ">=9"
  }
}
